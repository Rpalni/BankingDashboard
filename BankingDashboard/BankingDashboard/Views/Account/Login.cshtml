@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color: red;">@ViewBag.ErrorMessage</div>
}
<link rel="stylesheet" href="../StaticFiles/Styles/styles.css">
<form method="post" action="/Account/Login">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control custom-width" required />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control custom-width" required />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Login</button>
</form>