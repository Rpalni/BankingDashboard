@model IEnumerable<BankingDashboard.Models.Request.FundTransferRequest>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fund Transfer Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Banking Dashboard</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Transfer ID</th>
                        <th>Account Number</th>
                        <th>Customer Name</th>
                        <th>Account Balance</th>
                        <th>Deposit Amount (From Account)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TransferId</td>
                            <td>@item.ToAccount</td>
                            <td>@item.CustomerName</td>
                            <td>@item.AccountBalance.ToString("C")</td>
                            <td>@item.DepositeAmount.ToString("C") (From Account: @item.FromAccount)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-warning">No fund transfer requests available.</p>
        }
        <a href="@Url.Action("FundTransfer", "FundTransfer")">Transfer Funds</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
